#!/bin/sh

TEMPDIR=`mktemp -d -t dstools`
"@CMAKE_COMMAND@" -E create_symlink \
    "@CMAKE_SOURCE_DIR@" \
    "${TEMPDIR}/@DSTOOLS_PGXN_NAME@"
"@CMAKE_COMMAND@" -E create_symlink \
    "@CMAKE_CURRENT_BINARY_DIR@/zipignore" \
    "${TEMPDIR}/zipignore"
cd "${TEMPDIR}"
zip --exclude @zipignore \
    -r "@CMAKE_CURRENT_BINARY_DIR@/@DSTOOLS_PGXN_NAME@.zip" \
    "@DSTOOLS_PGXN_NAME@"
